{
  "compilerOptions": {
    "target": "es2019",
    "module": "ESNext",
    "lib": ["DOM.Iterable", "DOM", "ESNext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "declaration": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "noEmit": false,
    "jsx": "react",
    "outDir": "dist",
    // 不要改变tsconfig rootDir 跟构建npm的路径相关
    "rootDir": "src",
    "checkJs": true,
    "allowJs": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src"]
}
